<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'Name'}}</div>
    <div class='item-prop'>{{ localize "TRUED6.Skill.Used" }}</div>
    <div class='item-prop'>{{localize "TRUED6.Skill.UsageType.label"}}</div>
    <div class='item-controls'>
      <a class='item-control item-create' title='Create item' data-type='skill'>
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type=(localize (concat "TYPES.Item.skill"))}}
      </a>
    </div>
  </li>
  {{#each skills as |item id|}}
  <li class='item flexrow' data-item-id='{{item._id}}'>
    <div class='item-name'>
      <div class='item-image'>
          <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
      </div>
      <h4>{{item.name}}</h4>
    </div>
    <div class='item-prop'>{{ item.isUsedInfo }}</div>
    <div class='item-prop'>{{ localize (concat "TRUED6.Skill.UsageType." item.system.usageType) }}</div>
    <div class='item-controls'>
      
      {{#if item.rollable}}
      <a class='rollable' data-roll-type='{{item.rollType}}' data-is-attack="{{item.system.isAttack}}" data-is-spell="{{item.system.isSpell}}" data-label="{{item.name}}" data-attribute="{{item.system.attribute}}" data-item-id="{{item._id}}" data-roll-style="{{item.system.rollStyle}}" data-formula="{{item.system.formula}}">
        <i class='fas fa-dice'></i>
      </a>
      {{/if}}
      {{#if item.usable}}
      <a class='usable' data-item-id="{{item._id}}">
        <i class="fa-solid fa-bolt-lightning"></i>
      </a>
      {{/if}}
      {{#if item.isUsed}}
      <a class='refreshUse' data-item-id="{{item._id}}">
        <i class="fa-solid fa-rotate"></i>
      </a>
      {{/if}}
      <a class='send-to-chat' data-item-id="{{item._id}}">
        <i class="fas fa-comment"></i>
      </a>
      <a class='item-control item-edit'
        title='{{localize "DOCUMENT.Edit" type=(localize (concat "TYPES.Item.skill"))}}'>
        <i class='fas fa-edit'></i>
      </a>
      <a class='item-control item-delete'
        title='{{localize "DOCUMENT.Delete" type=(localize (concat "TYPES.Item.skill"))}}'>
        <i class='fas fa-trash'></i>
      </a>
    </div>
  </li>
  {{/each}}
</ol>