<div class="grid-span-2">
  <div class="border">
    <div class="label top-left top-right separator-line big">
      <span>{{localize header}}</span>
    </div>
    {{#each values as |item id|}}
    <div class="list-item separator-line flexrow item" data-item-id='{{item._id}}'>
      <label>{{item.name}}</label>
      <div class="align-right">
        <a class='item-control item-edit'
          title='{{localize "DOCUMENT.Update" type=(localize (concat "TYPES.Item." type))}}'>
          <i class='fas fa-edit'></i>
        </a>
        <a class='item-control item-delete'
          title='{{localize "DOCUMENT.Delete" type=(localize (concat "TYPES.Item." type))}}'>
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </div>
    {{/each}}
    <div class="list-button">
      <a class='item-control item-create'
        title='{{localize "DOCUMENT.New" type=(localize (concat "TYPES.Item." type))}}' data-type='{{type}}'>
        <i class='fas fa-plus'></i> {{localize 'DOCUMENT.New' type=(localize (concat "TYPES.Item." type))}}
      </a>
    </div>
  </div>
</div>