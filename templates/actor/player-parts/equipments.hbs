<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'Name'}}</div>
    <div class='item-prop'>{{localize "TRUED6.Equipment.Type"}}</div>
    <div class='item-prop'>{{localize "TRUED6.Equipment.AttackType"}}</div>
    <div class='item-prop'>{{localize "TRUED6.Equipment.DmgBonus"}} / {{localize "TRUED6.Equipment.Defense"}}</div>
    <div class='item-controls'>
      <a class='item-control item-create' title='Create item' data-type='equipment'>
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type=(localize (concat "TYPES.Item.equipment"))}}
      </a>
    </div>
  </li>
  {{#each equipments as |item id|}}
  <li class='item flexrow' data-item-id='{{item._id}}'>
    <div class='item-name'>
      <div class='item-image'>
          <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
      </div>
      <h4>{{item.name}}</h4>
    </div>
    <div class='item-prop'>{{ localize (concat "TRUED6.Equipment." item.system.type)}}</div>
    <div class='item-prop'>
      {{#if item.rollType}}
      {{ localize (concat "TRUED6.Attacks." item.rollType)}}
      {{/if}}
    </div>
    <div class='item-prop'>{{ item.system.damageBonus}} / {{ item.system.defenseValue }}</div>
    <div class='item-controls'>
      {{#if item.rollable}}
      <a class='rollable' data-roll-type='{{item.rollType}}' data-target="{{item.target}}"
        data-label="{{item.label}}" data-dmg-bonus="{{item.system.damageBonus}}" data-attribute="{{item.attribute}}" data-force-disadvantage="{{item.system.forceDisadvantage}}">
        <i class='fas fa-dice'></i>
      </a>
      {{/if}}
      <a class='send-to-chat' data-item-id="{{item._id}}">
        <i class="fas fa-comment"></i>
      </a>
      <a class='item-control item-edit'
        title='{{localize "DOCUMENT.Edit" type=(localize (concat "TYPES.Item.equipment"))}}'>
        <i class='fas fa-edit'></i>
      </a>
      <a class='item-control item-delete'
        title='{{localize "DOCUMENT.Delete" type=(localize (concat "TYPES.Item.equipment"))}}'>
        <i class='fas fa-trash'></i>
      </a>
    </div>
  </li>
  {{/each}}
</ol>