{
    "i18n-ally.localesPaths": [
        "lang"
    ],
    "i18n-ally.sourceLanguage": "en",
    "i18n-ally.keystyle": "nested",
    "editor.tabSize": 2,
    "[javascript]": {
        "editor.tabSize": 2
    },
    "[handlebars]": {
        "editor.tabSize": 2
    },
    "[scss]": {
        "editor.tabSize": 2
    },
    // This one forces the tab to be **space**
    "editor.insertSpaces": true,
    "liveSassCompile.settings.formats": [
        {
            "extensionName": ".css",
            "format": "expanded",
            "savePath": "/css"
        }
    ]
}